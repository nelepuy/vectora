[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    .mypy_cache,
    .pytest_cache
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
per-file-ignores = 
    __init__.py:F401
max-complexity = 10

# Security-related rules
select = 
    E,  # pycodestyle errors
    W,  # pycodestyle warnings
    F,  # pyflakes
    C,  # complexity
    B,  # bugbear
    S,  # bandit security
